mixin inputs(inputs)
  - const { items,email,drop,dropdownFirst,start,end,datepicker } = inputs
  - const { arrow, mods,hover, pretty, focus, Imask } = items
  .inputs
    .inputs__row
      +text-field(email)
      +title(hover)
    .inputs__row
      +text-field(pretty)
      +title(focus)
    .inputs__row
      +title(drop)
      +dropdown(dropdownFirst)
    .inputs__row
      +text-field(Imask)
    .inputs__row.inputs__calendar(class=mods)
      +datepicker(start)
      +datepicker(end)
    .inputs__row.inputs__container(class=mods)
      +datepicker(datepicker)
    .inputs__row.inputs__container
      +text-field(arrow)
