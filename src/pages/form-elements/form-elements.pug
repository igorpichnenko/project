extends ../../layouts/base
include ../../components/range-slider/range-slider
include ../../components/pagination/pagination
include ../../components/dropdown/dropdown
include ../../components/checkbox/checkbox
include ../../components/like/like
include ../../components/rate/rate
include ../../components/input/input
include ../../components/title/title
include ../../components/button/button
include ../../components/calendar/calendar
include ../../components/comments/comments

block title
  title color-type

block head
    link(rel="stylesheet" href="form-elements.css")
    link(href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" rel="stylesheet")
    

block content
   form.form-mask
    .form-items
     .form-item
      +title('Text Field','title form-items__title')
      +title('Default','form-item__hover-title')
     +input('Email','email')
    .form-items
     .form-item
      +title('Text Field','title form-items__title')
      +title('hover/focus','form-item__hover-title')
     +input('This is pretty awesome')
    .form-items
     +title('dropdown','title form-items__title')
     +dropdown
    .form-items
     +title('masked text field','title form-items__title')
     +input('ДД.ММ.ГГГГ','text', 'input mask-date')
    .form-items__dabl-date
     +datepicker-dabl
    .form-items__filter
     +title('filter date dropdown','title form-items__title')
     +datepicker-filter
    .form-items
     +title('subscription text field','title form-items__title')
     .subscription-input
      +input('Email','email','input','email')
      button.subscription-button
   section.section-dropdowns
    .section-dropdown
     .section-dropdown__item
      +title('dropdown','title form-items__title')
      +title('Default','form-item__hover-title')
     +dropdown-medium
    .section-dropdown__item
     +title('dropdown','title form-items__title')
     +title('expanded','form-item__hover-title')
    +dropdown-medium('dropdown__list--visible')
    .section-checkbox
     .section-checkbox__item
      +checkbox-list
     .section-checkbox__item
      +checkbox-list("checkbox-wrapper--visible")
    .section-commets
     +comments('insert_emoticon','Комфорт','Шумопоглощающие стены')
     +comments('location_city','Удобство','Окно в каждой из спален')
block script
    script(src="./form-elements.js")
    
    