extends ../../layouts/base
include ../../blocks/range-slider/range-slider
include ../../blocks/pagination/pagination
include ../../blocks/dropdown/dropdown
include ../../blocks/dropdown-counters/dropdown-counters
include ../../blocks/checkbox/checkbox
include ../../blocks/checkbox-rich/checkbox-rich
include ../../blocks/checkbox-list/checkbox-list
include ../../blocks/like/like
include ../../blocks/rate/rate
include ../../blocks/input/input
include ../../blocks/title/title
include ../../blocks/button/button
include ../../blocks/calendar/calendar
include ../../blocks/comments/comments
include ../../blocks/radio/radio
include ../../blocks/toggle/toggle
include ../../blocks/bullet-list/bullet-list
include ../../blocks/person-comment/person-comment

block title
  title color-type

block head
  link(rel='stylesheet', href='form-elements.css')

block body
  .form-elements
    .column-one
      form.column-one__form-mask
        .column-one__items
          .column-one__item
            .column-one__title
              +title({title:'Text Field'})
            .column-one__title_hover
              +title({title:'Default',mods:'hover'})

          .column-one__email
            +input({inType: "email"})
          .column-one__item
            +title({title: 'Text Field'})
            +title({title:'hover / focus',mods: 'hover column-one__title_focus'})

          +input({mods: 'hover',inType: 'text',text: 'This is pretty awesome'})
          .column-one__dropdown
            +title({title:'dropdown'})
            +dropdown({name: 'room', items: [ { title: 'взрослые'}, { title: 'дети' }, { title: 'младенцы'}, ], })

          +title({title:'masked text field'})
          .column-one__iMask
            +input({mods: 'standart,mask',inType: 'text',text: 'ДД.ММ.ГГГГ'})

          .column-one__date-title
            +title({title:'date dropdown'})
            +title({title:'date dropdown'})

          .column-one__dabl-date.js-datepicker-container
            +datepicker
            +datepicker({text: "19.08.2019",mods: "filter js-datepicker-end"})

          +title({title:'filter date dropdown'})
          .column-one__medium.js-datepicker-container
            +datepicker({text:"19 авг - 23 авг",mods: "filter js-datepicker",data: "d M"})

            .column-one__subscription
              +title({title:'subscription text field'})
              +input({ button:'arrow_forward', inType: 'email',text: 'Email',mod: "input__button"})

            .column-one__item
              +title({title:'dropdown'})
              +title({title:'Default',mods:'hover'})

            +dropdown({modBtn: 'dropdown__button_hidden', title: 'Сколько спален и кроватей', items: [ { title: 'спальни', name:1,number:2}, { title: 'кровати', name: 1,number:2}, { title: 'ванные комнаты'}, ], })
            .column-one__drop-medium
              +title({title:'dropdown'})
              +title({title:'expanded',mods: 'hover'})
            +dropdown({btn: 'dropdown_active',mod: 'dropdown_active',modSect: 'dropdown__toggle_activ', modBtn: 'dropdown__button_hidden', title: 'Сколько спален и кроватей', items: [ { title: 'спальни', name:1,number:2}, { title: 'кровати', name: 1,number:2}, { title: 'ванные комнаты'}, ], })

            .column-one__checkbox
              +checkbox-list
              .column-one__checkbox-list
                +checkbox-list("checkbox-list__icon_rotate",'checkbox-list__visible')

    .column-two
      +title({title:'checkbox buttons'})
      .column-two__checkbox
        +checkbox('Можно курить')
        +checkbox('Можно с питомцами','','check')
        +checkbox('Можно пригласить гостей (до 10 человек)','checkbox__wrap','check')

      .column-two__radio
        +title({title:'radio buttons'})
      .column-two__radio-button
        +radio("Мужчина",'man','check')
        +radio('Женщина','man')

      +title({title:'toggle',mods:'standart column-one__title_focus'})
      .column-two__toggle
        +toggle("checked")
        +toggle

      +title({title:"like button"})
      .column-two__like
        +like("2")
        +like("12","checked")

      +title({title:"rate button"})
      .column-two__rate
        +rate-button('form-elements-2', 2)
        +rate-button('form-elements', 1)

      +title({title:"dropdown"})
      .column-two__dropdown
        +dropdown({name: 'room',mod: 'dropdown_active',modSect: 'dropdown__toggle_activ', items: [ { title: 'взрослые'}, { title: 'дети' }, { title: 'младенцы'}, ], })

      .column-two__rich
        +title({title:"rich checkbox buttons"})
        .column-two__rich-button
          +checkbox-rich({title: 'Широкий коридор',text:'Ширина коридоров в номере не менее 91 см.'})
          +checkbox-rich({title: 'Помощник для инвалидов',text:'На 1 этаже вас встретит специалист и проводит до номера',mods:'checkbox-rich__wrap'})

    .column-three
      .column-three__range
        +title({title:'range slider'})
        .column-three__out
          input.range-out.range-start
          input.range-out.range-end
      .column-three__range-slider
        +range-slider

      .column-three__title-btn
        +title({title:'buttons'})
        .column-three__button-top
          +button({mods: 'content-size,large'}) 
          +button({mods: 'disable,content-size,large'})
        .column-three__button-center
          +button({mods: 'border,content-size,large'})
          .column-three__button-small
            +button({mods: 'border,disable,content-size'})
        .column-three__button-bottom
          .column-three__container
            +button({mods: 'border,content-none'}) 
          .column-three__container
            +button({mods: 'border,content-none,color-black'})
        .column-three__container
          +button({text: 'Перейти к оплате', mods: 'arrow'})

        .column-three__pagination-title
          +title({title:'pagination'})
        .column-three__pagination
          +pagination('pagination__text column-three__pagination-text')

        .column-three__dropdown
          +title({title:'dropdown'})
          +dropdown({name: 'room', mod: 'dropdown_active',modSect: 'dropdown__toggle_activ', items: [ { title: 'взрослые', number: '2'}, { title: 'дети', number: '1'}, { title: 'младенцы'}, ], })

        .column-three__bullet
          +title({title:'bullet list'})
        .column-three__bullet-list
          +bullet-list([ 'Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00' ])

  .column-four
    .column-four__items
      +comments('insert_emoticon','Комфорт','Шумопоглощающие стены')
      +comments('location_city','Удобство','Окно в каждой из спален')

    .column-four__murad
      +person-comment('Мурад Сарофанов','5 дней назад','Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.','comment-murad','12','checked')
block script
  script(src='./form-elements.js')
