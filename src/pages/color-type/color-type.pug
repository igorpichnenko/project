extends ../../layouts/base
include ../../blocks/color-options/color-options
include ../../blocks/title-options/title-options

block title
  title color-type

block head
  link(rel='stylesheet', href='color-type.css')

block body

  -
    data = require('./color-type.json');
    
  .color-type
    .color-type__color
      +color-options(data.color)
    .color-type__options
     +title-options(data.types)
     

block script
  script(src='./color-type.js')
