extends ../../layouts/rooms
include ../../components/pie/pie
include ../../components/comments/comments
include ../../components/title/title
include ../../components/calendar/calendar
include ../../components/dropdown/dropdown
include ../../components/button/button
include ../../components/like/like
include ../../components/list/list
include ../../blocks/form-lux/form-lux

block title
  title Landing

block head
    link(rel="stylesheet" href="room-detalis.css")
    
block content
 .detalis-background
 .room-detalis
 
   .room-detalis__item
   
     .room-detalis__comment
        +medium-title('Сведения о номере')
        .room-detalis__comments
         +comments('insert_emoticon','Комфорт','Шумопоглощающие стены')
         +comments('location_city','Удобство','Окно в каждой из спален')
         +comments('whatshot','Уют','Номер оснащён камином')
      
     .room-detalis__pie
       +pie


     .room-detalis__reviews
       .room-detalis__title
         +medium-title('Отзывы посетителей номера')
         +title('2 отзыва','room-detalis__title_lower')
       .room-detalis__title_murad
          +comment('Мурад Сарафанов','5 дней назад','Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.','comment-murad','12','checked')
       .room-detalis__patricia
          +comment('Патрисия Стеклышкова','Неделю назад','Обслуживание на высоте! Все аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент','comment-patricia','2')
          
          
     .room-detalis__rules
         .room-detalis__text
          +medium-title('Правила')
         +bullet-list([
          'Нельзя с питомцами',
          'Без вечеринок и мероприятий',
          'Время прибытия — после 13:00, а выезд до 12:00'
         ])
         
     .room-detalis__cancel
         +medium-title('Отмена')
         .room-detalis__paragraf Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги. 
         
   .room-detalis__form
    +formlux('number-container__lux room-detalis__formlux','888','9 990₽')
    
block footer
block script
    script(src="./room-detalis.js")