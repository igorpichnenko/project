mixin formlux({data})
  form.card-lux
    .card-lux__container
      +price(data.price)
      .card-lux__calendar.js-datepicker-container
        .card-lux__datepicker
         +datepicker(data.startData)
        .card-lux__datepicker_end
         +datepicker(data.endData)
      .card-lux__title
       +title(data.guests)
      .card-lux__dropdown
       +dropdown(data.dropdown)

      .card-lux__wrapper 
        .card-lux__price
          span.card-lux__text.card-lux__text_left= data.cost
          span.card-lux__text 39 960₽
        .card-lux__price
          span.card-lux__text.card-lux__text_left= data.text
          span.card-lux__label.card-lux__label_top i
          span.card-lux__text 0₽
        .card-lux__price
          .card-lux__text.card-lux__text_wrap= data.tax
          span.card-lux__label.card-lux__label_icon-right i
          .card-lux__text 300₽
    .card-lux__bottom
      .card-lux__wrap
        .card-lux__sum Итого
        .card-lux__border
        .card-lux__sum 38 081₽
    .card-lux__button
      +button(data.btn)
