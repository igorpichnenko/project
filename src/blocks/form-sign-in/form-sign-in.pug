mixin form-signin(mod= "border,content-size,large")
  form.sign-in
    .signin-container
      +large-title('Войти')
      .signin-container__input
       +input
       +input({inType:'password',text:'Пароль'})
      +button({text: 'Войти', mods: 'arrow'})
      .signin-container__item
       .signin-container__text Нет аккаунта на Toxin?
       .signin-container__button-wrap
        +button({text: 'Создать', mods: mod})