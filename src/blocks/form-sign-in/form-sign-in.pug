mixin form-signin
  form.sign-in
    .signin-container
      +large-title('Войти')
      .signin-container__input
       +input('Email','email')
       +input('Пароль','password')
      +button({text: 'Войти', mods: 'arrow'})
      .signin-container__item
       .signin-container__text Нет аккаунта на Toxin?
       .signin-container__button-wrap
        +button({text: 'Создать', mods: 'border,content-size,large'})