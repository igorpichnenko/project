mixin header(options={})
  - let { login = true, user = 'Юлий Цезарь', list, button } = options;

  .header
    .header-main.js-header-main
      .header-main__container
        .header-main__element
          .header-main__logo
           a.header-main__link(href="/mock-address/change-me" target="_blank")
            include ../../images/logo-main.svg
                
          +burger

        nav.header-main__nav.js-header-nav
          +header-nav(list)

          .header-main__items

          if login
            .header-main__buttons
              .header-main__left-button
                +button(button.SigIn)
              .header-main__right-button
                +button(button.Reg)

          else
            .header-main__person= user
