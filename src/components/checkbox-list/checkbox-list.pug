mixin checkbox-list(mods="",mod="",title="expandable checkbox list")
  .checkbox-list
   .checkbox-list__container
    span.checkbox-list__button= title
    i(class=""+mods).material-icons.checkbox-list__icon expand_more
   div(class=""+mod).checkbox-list__wrapper
      .checkbox-list__indent
      
      +checkbox('Завтрак')
      +checkbox('Письменный стол','','check')
      +checkbox('Стул для кормления','','check')
      +checkbox('Кроватка','','check')
      +checkbox('Телевизор')
      +checkbox('Шампунь')