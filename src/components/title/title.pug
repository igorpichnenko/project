mixin title(title,name ="title")

    h3(class=''+name)= title

mixin large-title(title)

   h2.large-title= title


mixin medium-title(title)
  
    h3.medium-title= title

mixin title-number (text,price,mods,className="number-container__text",classlux="number-container__lux")
   .title-number
      .number-container
       span.number-container__title № 
       span(class=""+className)= text
       span(class=""+classlux)= mods
      .number-container
       .number-container__price= price
       .number-container__duration в сутки

mixin reviews(number,name,check)
 .reviews
  +rate-button(name,check)
  .reviews-container
   .reviews-container__number= number
   .reviews-container__text Отзывов