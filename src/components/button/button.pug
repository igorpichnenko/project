mixin button({mods = '', text="Click me"} = {})
  - 
    let modList = mods.split(',')
    let allMods = ''
    
    modList.forEach(function (mod) {
    allMods = allMods + ' button__' + mod.trim()
    })
    
  button.button(class= allMods, type="button")= text