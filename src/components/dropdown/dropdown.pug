mixin dropdown
    .form-group
      .dropdown
        button(type="button").dropdown__button Сколько гостей
        .dropdown__list
          .dropdown__list-item(data-value='travel')
            span.dropdown__text Взрослые
            .calculate
              button(type="button").button-mat.button-minus -
              span.number 2
              button(type="button").button-mat.button-plus +
          .dropdown__list-item(data-value='lessons')
            span.dropdown__text.sub Дети
            .calculate
              button(type="button").button-mat.button-minus -
              span.number 1
              button(type="button").button-mat.button-plus +
          .dropdown__list-item(data-value='photo')
            span.dropdown__text.sub  Младенцы 
            .calculate
              button(type="button").button-mat.button-minus -
              span.number 0
              button(type="button").button-mat.button-plus +
          .button-box
            button.button-footer Очистить
            button.button-footer.button-left Применить
        input.dropdown__input-hiden(type='text', name='select-category')
        
